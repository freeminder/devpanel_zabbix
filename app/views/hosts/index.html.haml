.container
  %h2
    %b Hosts
  %table.table
    %tr
      %th Name
      %th ID
      %th Template Name
      %th Template ID
      %th Hostgroup Name
      %th Hostgroup ID
      %th IP
      %th Domain Name
      %th Port
      %th Use IP
    - @hosts_arr.each do |host|
      %tr
        %td= link_to host[:name], host_path(host[:id])
        %td= host[:id]
        %td= host[:template_name] ? host[:template_name] : 'No template assigned'
        %td= host[:template_id] ? host[:template_id] : 'No template assigned'
        %td= host[:hostgroup_name] ? host[:hostgroup_name] : 'No hostgroup assigned'
        %td= host[:hostgroup_id] ? host[:hostgroup_id] : 'No hostgroup assigned'
        %td= host[:ip]
        %td= host[:dns]
        %td= host[:port]
        - if host[:useip] == "1"
          %td= "Yes"
        - else
          %td= "No"

  %hr
  %div{:align => "right"}
    = link_to 'Add host', new_host_path, class: 'btn btn-success'
